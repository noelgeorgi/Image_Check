<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="100"
        android:id="@+id/url1"
        android:hint="@string/first_url"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="100"
        android:id="@+id/url2"
        android:hint="@string/second_url"
        android:layout_below="@+id/url1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_value"
        android:id="@+id/enter"
        android:layout_below="@+id/url2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:textSize="20dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/imagedisplay1"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/enter"
        android:layout_toStartOf="@+id/enter"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter"
        android:layout_gravity="center"
        android:id="@+id/imagedisplay2"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/imagedisplay1"
        android:layout_toRightOf="@+id/enter"
        android:layout_toEndOf="@+id/enter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/percentval"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp" />


</RelativeLayout>
